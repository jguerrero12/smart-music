<!doctype html>
<html>
<head>
  <title>Home</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
 <!-- load bootstrap css -->
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
</head>
<body style="background-color: #5C45A7">
  <header>
    <% include ../partials/navbar %>
    <div class="page-header text-center">
      <h1 class="text-light my-4 pb-4">Smart Music</h1>
    </div>
  </header>
  <main>
    <div class="container text-center my-4 py-4">
      <button id="start-button" class="btn btn-lg" style="background-color: #A493D9" onclick="handleStartClick()">
        <span class="fa fa-play" style="color: #452B9A"></span>
      </button>
      <button id="play-button" class="btn btn-lg" style="display: none; background-color: #A493D9" onclick="handlePlayClick()">
        <span class="fa fa-play" style="color: #452B9A"></span>
      </button>
      <button id="stop-button" class="btn btn-lg" style="display: none; background-color: #A493D9" onclick="handleStopClick()">
        <span class="fa fa-stop" style="color: #452B9A"></span>
      </button>
      <button id="add-instrument-button" class="btn btn-lg" style="display: none; background-color: #A493D9" onclick="handleAddInstrumentClick()">Add Instrument</button>
      <button id="reset-button" class="btn btn-lg" onclick="handleResetClick()" style="background-color: #A493D9"">
        <span class="fa fa-step-backward" style="color: #452B9A"></span>
      </button>
    </div>
  </main>
  <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
  <script type="text/javascript" src="/controllers/home.js"></script>
</body>
</html>
